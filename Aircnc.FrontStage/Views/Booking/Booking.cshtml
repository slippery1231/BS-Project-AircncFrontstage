                        <input asp-for="RoomDetailVM.RoomId" type="hidden" value="@Model.RoomDetailVM.RoomId" />
                        <input asp-for="RoomDetailVM.UnitPrice" type="hidden" value="@total" />
                        <button class="btn btn-danger" type="submit">確認並付款</button>
                    </form>
                    
                </div>
            </div>
            <!-- 右半邊 -->
