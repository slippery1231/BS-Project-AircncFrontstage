@{ ViewData["Title"] = "付款與收款 - 帳號設定";
    Layout = "PaymentLayout";}
<!-- content -->
<div class="container-fluid content-box">
    <div class="container">
        <!-- 標題列 -->
        <div class="row content-head mb-3 mx-4">
            <div class="col-10">
                <a href="~/Personal/PersonalBox" class="fw-bold account">帳號</a>
                <span class="fw-bold mx-2">></span>
                <span class="fw-bold">付款與收款</span>
            </div>
            <div class="col-10">
                <span class="fs-2 fw-bold">付款與收款</span>
            </div>
        </div>
        <!-- 選項切換列 -->
        <div class="row options mx-4 mt-5">
            <div class="col-10">
                <ul class="nav nav-tabs">
                    <a href="~/Personal/PaymentIndex" class="pay me-2">付款</a>
                    <a href="~/Personal/PayoutMethod" class="fw-bold mx-2">收款</a>
                    <a href="#" class="fw-bold mx-2">稅款</a>
                    <a href="#" class="fw-bold mx-2">捐款</a>
                    <a href="#" class="fw-bold mx-2">旅客贈款</a>
                </ul>
            </div>
        </div>
        <!-- 付款區塊 -->
        <div class="row payment-record-method mt-4 mx-4 ">
            <div class="col-10 col-md-7">
                <span class="fs-4 fw-bold d-block">付款紀錄</span>
                <span class="d-block text-black">追蹤所有付款和退款。</span>
                <button class="btn btn-lg px-4 fs-6 fw-bold mt-4">
                    <a href="#" class="text-white manage-payment">管理付款</a>
                </button>
                <span class="fs-4 fw-bold d-block mt-4">付款方式</span>
                <span class="d-block text-black">使用我們的安全付款系統新增付款方式後，就能開始計畫下一趟旅程了。</span>
                <button class="btn btn-lg px-4 text-white fs-6 fw-bold mt-4">新增付款方式</button>
            </div>
            <!-- 提醒事項區塊 -->
            <div class="col-md-4 ms-5 d-none d-md-block reminder">
                <i class="fas fa-money-bill-wave fs-3 d-block mt-4 mb-3 ms-3"></i>
                <span class="ms-2 fw-bold p-2">透過 Airbnb 支付所有款項</span>
                <span class="ms-2 d-block p-2">請務必透過 Airbnb 網站付款和溝通，以確保你受到我們的<a href="#" class="clause">《服務條款》</a>、<a href="#" class="clause">《支付服務條款》</a>、退訂及其他保障措施的保護。<a href="#" class="detail">了解詳情</a></span>
            </div>
            <!-- 禮物卡 -->
            <div class="row gift-card">
                <div class="col-10 col-md-6">
                    <span class="fs-4 fw-bold d-block mt-4">Airbnb禮物卡基金</span>
                    <span class="text-black text-nowrap">兌換禮物卡，查看你的旅行基金餘額。</span>
                    <a href="#" class="">適用相關條款</a>
                    <div class=" gift-card-balance mt-3 py-3">
                        <div class="balance d-flex justify-content-between">
                            <div class="gift-card-label">
                                <span class="mt-4">目前禮物卡基金餘額</span>
                            </div>
                            <div class="price d-flex">
                                <span class="gift-card-amount">$0.00</span>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-lg px-4 text-white fs-6 fw-bold mt-4 d-block">新增禮物卡</button>
                </div>
            </div>
            <!-- 優惠券 -->
            <div class="row coupon">
                <div class="col-10 col-md-6">
                    <span class="fs-4 fw-bold d-block mt-4">優惠券</span>
                    <span class="text-black text-nowrap d-block">新增優惠券，為下趟旅程省下旅費。</span>
                    <div class="coupon-balance py-3 justify-content-between d-flex">
                        <div class="coupon-label">
                            <span class="d-inline-block mt-4">你的優惠券</span>
                        </div>
                        <div class="price d-flex">
                            <span class="coupon-amount">0</span>
                        </div>
                    </div>
                    <button class="btn btn-lg px-4 text-white fs-6 fw-bold mt-4 d-block">新增優惠券</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

@section CSS{

    <link href="~/css/Payment/PaymentIndex.css" rel="stylesheet" />
}