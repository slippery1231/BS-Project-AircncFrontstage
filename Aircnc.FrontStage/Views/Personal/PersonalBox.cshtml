@{ ViewData["Title"] = "帳號設定";}

<section class="container-lg mt-5 provide-service">
    <section class="container section1">
        <h2 class="row row-cols-1 fw-bold">帳號</h2>
        @*<p>Rosario Kao,kirirayray@gmail.com ·<a href="~/Personal/Personal_Details" class="info-center">前往個人資料</a></p>*@
        @foreach (var user in Model)
        {
            <p class="">@user.Name，@user.Email <a href="~/Personal/Personal_Details" class="info-center">前往個人資料</a></p>
        }
    </section>
    <div class="row row-cols-1 row-cols-md-3 ">
        <div class="mt-3 personal">
            <a href="~/Personal/Personaldata" class="personal-info">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-money-bill-wave-alt fs-2"></i>
                    <div class="textbox2 mt-5">
                        <h3 class="fs-5 fw-bold">個人資料</h3>
                        <p class="tb2">提供個人資料和聯絡方式</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-3 personal">
            <a href="~/Personal/LoginSecurity" class="login-security">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-address-card fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">登入與安全</h3>
                        <p class="tb2">更新密碼以確保帳號安全</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-3 personal">
            <a href="~/Personal/PaymentIndex" class="payment">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-shield-alt fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">付款與收款</h3>
                        <p class="tb2">查看付款、收款、優惠券、禮物卡和稅費</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/Notification">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-credit-card fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">通知</h3>
                        <p class="tb2">選擇通知設定和你偏好的聯絡方式</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/Privacy_and_Share" class="privacy-share">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-user-shield fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">隱私與分享</h3>
                        <p class="tb2">管理已聯絡的應用程式、你分享的內容以及其他人的訪問權限</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/Preference" class="preference">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-eye fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">全域偏好設定</h3>
                        <p class="tb2">設定預設的語言、幣別和時區</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/Trip" class="trip">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-check-circle fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">差旅</h3>
                        <p class="tb2">新增工作電子郵件，即可享受商務差旅福利</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/RentTool">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-laptop-house fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">專業出租工具</h3>
                        <p class="tb2">如果你在Airbnb上管理多間房源，可以使用專業工具</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-5 personal">
            <a href="~/Personal/Invitecoupon">
                <div class="shadow p-3 mb-5 bg-white rounded h-100 d-flex flex-column justify-content-between">
                    <i class="fas fa-chart-bar fs-2"></i>
                    <div class="textbox2">
                        <h3 class="fs-5 fw-bold">邀請好友旅行基金和優惠券</h3>
                        <p class="tb2">你有$0TWD的邀請好友旅行基金和優惠券可供使用。了解詳情。</p>
                    </div>
                </div>
            </a>
        </div>


    </div>
</section>

<section class="container section2  text-center">
    <div class="row">
        <div class="col-12">
            <p class="">想要停用您的帳號嗎?</p>
            <a href="" class="info-center">立即處理</a>
        </div>
    </div>
</section>

@section topCss{
    <link href="~/css/Personal/index-style.css" rel="stylesheet" />
    <link href="~/css/Personal/PersonalBox.css" rel="stylesheet" />
}

