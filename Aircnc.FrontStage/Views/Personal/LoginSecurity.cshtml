@{ ViewData["Title"] = "登入與安全 - 帳號設定";}


<section>
    <div class="container">
        <section class="section1">
            <a href="~/Personal/PersonalBox" class="account-setting">帳號 </a>
            <span>> 登入與安全性</span>
            <h2 class="fw-bold">登入與安全性</h2>
            <p class="mt-5" style="color:rgb(3, 94, 100)">登入</p>
            <hr style="border : 3px solid rgb(13, 183, 196);" class="mt-2 mb-0" width="80px" />
            <hr style="border : 0.5px solid grey;" class="mt-0" width="650px" />
        </section>
        <div class="row">

            <div class="col-12 col-md-6 mt-5">
                <h2 class="mt-3 fw-bold">登入</h2>
                <div class="sec-1 mt-5">
                    <p>密碼</p>
                    <a href="" class="linkline">更新</a>
                </div>
                <p>上次更新：7 天前</p>
                <hr style="border : 1px solid  grey;" class="mt-5" />
                <h2 class="mt-5 fw-bold">社群帳號</h2>
                <div class="sec-1 mt-5">
                    <p>Facebook</p>
                    <a href="" class="linkline">連結</a>
                </div>
                <p>未連結</p>
                <hr style="border : 1px solid  grey;" class="mt-5" />
                <div class="sec-1 mt-5">
                    <p>Google</p>
                    <a href="" class="linkline">取消連結</a>
                </div>
                <p>取消連結</p>
                <hr style="border : 1px solid  grey;" class="mt-5" />
                <h2 class="mt-5 fw-bold">裝置紀錄</h2>
                <div class="sec-1 mt-5">
                    <p>Windows 10.0 · Chrome</p>
                    <a href="" class="linkline">登出紀錄</a>
                </div>
                <p>動態生成現在日期</p>
                <hr style="border : 1px solid  grey;" class="mt-5" />

            </div>

            <div class="col-12 col-md-2 mt-5">

            </div>
            <div class="col-12 col-md-4 rightbox">
                <i class="fas fa-shield-alt fs-1"></i>
                <h2 class="rbh">讓你的帳號更加安全</h2>
                <p class="rbh2">你的帳號安全：低</p>
                <p class="rbht">
                    我們不斷致力提升Airbnb用戶的安全性。 正因如此，我們會檢查每個帳號，盡可能確保所有人的資料都安全無虞。
                </p>
                <hr style="border : 0.5px solid grey;" class="mt-5" width="80px" />
                <div class="">
                    <input class="select2 mt-3" type="button" value="改進">
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h2 class="mt-5 fw-bold">帳號</h2>
                <div class="sec-1 mt-5">
                    <p>停用你的帳號</p>
                    <a href="" class="linkline" style="color: red;">停用</a>
                </div>
                <hr style="border : 1px solid  grey;" class="mt-5" />
            </div>
        </div>
    </div>
</section>

@section topCss{
    <link href="~/css/Personal/index-style.css" rel="stylesheet" />
