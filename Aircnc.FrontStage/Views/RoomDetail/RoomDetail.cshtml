                        <label for="date" class="col-4 col-form-label">日期</label>
                        <div class="d-flex my-2 flex-wrap">
                            <input asp-for="roomDetailPost.startDate" type="text" class="form-control" value="@TempData["startDate"]" readonly="readonly">
